<%= render partial: "shared/sidebar" %>

<div class="content-container">
  <div class="pagehead pt-2">
    <nav aria-label="Breadcrumb" class="mb-1 d-inline">
      <ol class="d-inline">
        <li class="breadcrumb-item"><h1 class="d-inline"><a href="<%= timeline_path(@current_notebook) %>">Timeline</a></h1></li>
        <li class="breadcrumb-item" aria-current="page"><h1><%= @date %></h1>
        </li>
      </ol>
    </nav>
    <a href="<%= new_entry_path(notebook: @current_notebook) %>" class="btn float-right mt-2"><%= octicon "pencil" %> New Entry</a>
  </div>

  <% @entries&.each do |entry| %>
    <%= render partial: "entries/list_entry", locals: { entry: entry } %>
  <% end %>
</div>

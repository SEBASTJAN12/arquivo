<%= render partial: "shared/sidebar" %>

<div class="content-container">
  <div class="pagehead pt-2">
    <h1 class="d-inline">Entries for <%= @date %></h1>
      <a href="<%= new_entry_path(notebook: @current_notebook) %>" class="btn float-right mt-2"><%= octicon "pencil" %> New Entry</a>
  </div>
  <% @entries&.each do |entry| %>
    <%= render partial: "entries/list_entry", locals: { entry: entry } %>
  <% end %>
</div>

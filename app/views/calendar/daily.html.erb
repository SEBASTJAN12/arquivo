<%= render partial: "shared/sidebar" %>
<% if @date == Date.today %>
  <% new_entry_link = new_entry_path(notebook: @current_notebook) %>
<% else %>
  <% new_entry_link = new_entry_path(notebook: @current_notebook, occurred_at: @date.middle_of_day) %>
<% end %>


<div class="content-container">
  <div class="pagehead pt-2 mb-2">
    <a href="<%= new_entry_link %>" class="btn btn-sm float-right"><%= octicon "pencil" %> New Entry</a>
    <nav aria-label="Breadcrumb" class="mb-1">
      <ol class="d-inline">
        <li class="breadcrumb-item"><h3 class="d-inline"><a href="<%= timeline_path(@current_notebook) %>">Timeline</a></h3></li>
        <li class="breadcrumb-item" aria-current="page"><h3><%= @date %></h3></li>
      </ol>
    </nav>
  </div>

  <div class="mb-4 mt-3">
    <a href="<%= calendar_daily_path(@date - 1.day, notebook: @current_notebook) %>" class="btn btn-sm">Previous Day</a>
    <a href="<%= calendar_daily_path(@date + 1.day, notebook: @current_notebook) %>" class="btn btn-sm float-right">Next Day</a>
  </div>

  <% @entries&.each do |entry| %>
    <%= render partial: "entries/list_entry", locals: { entry: entry } %>
  <% end %>
</div>

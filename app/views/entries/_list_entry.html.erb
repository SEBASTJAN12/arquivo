<div class="entry-box">
  <div class="Box-header">
    <a href="<%= edit_entry_path(entry)%>" class="Box-btn-octicon btn-octicon float-right">
      <%= octicon("pencil") %>&nbsp;
    </a>

    <a href="<%= entry_path(entry)%>" class="Box-btn-octicon btn-octicon">
      <%= octicon "link" %>
      <%= entry.occurred_at %>
    </a>
  </div>
  <div class="Box-body">
    <%= CommonMarker.render_html(entry.body).html_safe if entry.body %>
  </div>
</div>

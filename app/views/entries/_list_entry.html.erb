          <!--     <%= entry.occurred_at %> -->
          <!--   </a> -->
          <!-- </div> -->
          <div class="Box-body markdown-body">
            <a class="float-right" href="<%= entry_path(entry, notebook: @current_notebook) %>" class="link-gray"><%= time_ago_in_words(entry.occurred_at) %> ago</a>
            <h4 class="d-inline"><%= entry.subject %></h4>
            <details>
              <%= EntryRenderer.new(@current_notebook, entry).to_html %>
            </details>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <% if false %>

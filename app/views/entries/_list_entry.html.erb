    <div class="TimelineItem-badge">
      <%= octicon("organization") %>
    </div>

    <div class="TimelineItem-body">
        <div>
          <a class="" href="<%= entry_path(entry, notebook: @current_notebook) %>" class="link-gray"><%= entry.occurred_at.strftime("@%H:%M") %></a> &mdash;
          <h4 class="d-inline"><%= entry.subject %></h4>
        </div>

      <% if false %>
        <div class="entry-box">

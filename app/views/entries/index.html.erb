<%= render partial: "shared/sidebar" %>

<div class="content-container">

  <div class="pagehead">
    <h1>Entries</h1>
  </div>

  <p id="notice"><%= notice %></p>
  <table>
    <thead>
      <tr>
        <th>Body</th>
        <th>Occurred at</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @entries.each do |entry| %>
        <tr>
          <td class="body"><%= entry.body[0..140] %></td>
          <td class="occurred"><%= entry.occurred_at %></td>
          <td><%= link_to 'Show', entry %></td>
          <td><%= link_to 'Edit', edit_entry_path(entry, notebook: entry.notebook) %></td>
          <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Entry', new_entry_path %>

  <br>

  <%= will_paginate @entries %>
</div>

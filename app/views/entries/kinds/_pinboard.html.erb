<div class="TimelineItem">
  <div class="TimelineItem-badge">
    <%= octicon("bookmark") %>
  </div>

  <div class="TimelineItem-body mt-0">
    <div>
      <h4><a href="<%= entry.url %>" target="_blank" class="text-gray-dark"><%= entry.subject%></a></h2>
      <div class="mt-2"><%= EntryRenderer.new(entry).to_html %></div>
    </div>

    <div class="entry-list-header">
        <a href="<%= entry_path(entry)%>" class="Box-btn-octicon btn-octicon mr-1">
          <%= octicon "link", class: "mr-1" %><%= entry.occurred_at.strftime("%H:%M:%S") %>
        </a><a href="<%= edit_entry_path(entry)%>" class="Box-btn-octicon btn-octicon unselectable mr-1">
          <%= octicon("pencil") %> edit
        </a>
        <a href="<%= new_entry_path(entry.parent_notebook, in_reply_to: entry.identifier)%>" class="Box-btn-octicon btn-octicon unselectable mr-1"><%= octicon("reply") %> Add note</a>
      </div>
  </div>
</div>

<%= render partial: "static_site/shared/header" %>

<content>
  <div class="pt-2 mb-2">
    <h2>Archive of every entry</h2>
  </div>
  <div>
    <% @all_entries&.each do |entry| %>

      <div>
        <% if entry.subject %>
          <h3><%= link_to entry.subject, entry %></h3>
        <% else %>
          <h3><%= link_to entry.identifier, entry %></h3>
        <% end %>
        <p><%= entry.occurred_at.strftime("%A, %Y-%m-%d") %></p>
        <% if entry.summary %>
          <p><%= entry.summary.html_safe %></p>
        <% end %>
      </div>
    <% end %>

  </div>
  <%= will_paginate @all_entries, class: "pagination mt-4 mb-4"%>
</content>

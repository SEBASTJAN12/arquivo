<%= render partial: "static_site/shared/header" %>

<content>
  <div class="pt-2 mb-4">
    <h2>Archive of every mentioned contact</h2>
  </div>

  <% size = @contacts.count %>
  <% if size > 0 %>
    <div class="entry-body">

      <ul class="d-inline float-left list-style-none">
        <% @contacts[0..size/2].each do |c| %>
          <li><a href="<%= contact_path(query: c.name) %>">@<%= c.name%></a></li>
        <% end %>
      </ul>

      <ul class="d-inline list-style-none float-left pl-2">
        <% @contacts[size/2+1..-1].each do |c| %>
          <li><a href="<%= contact_path(query: c.name) %>">@<%= c.name%></a></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</content>


<div class="container-lg clearfix">
  <%= render partial: "timeline/search" %>

  <%= render partial: "timeline/sidebar", locals: { results: @search_results } %>

  <div class="col-6 p-2 pl-4 float-left">
    <% entry = Entry.new %>
    <%= render partial: "timeline/new_entry", locals: { entry: entry } %>

    <% @entries&.each do |day, entries| %>
      <h3><%= day %></h3>
      <% entries.each do |entry| %>
        <%= render partial: "timeline/entry", locals: { entry: entry } %>
      <% end %>
    <% end %>
  </div>
</div>

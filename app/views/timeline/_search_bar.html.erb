<% if FeatureFlag[:redesign] %>
<div class="tabnav">
  <nav class="tabnav-tabs" aria-label="Foo bar">
    <a class="btn btn-sm float-right" href="#url" role="button">New Entry</a>

    <a class="tabnav-tab" href="<%= timeline_path(notebook: @current_notebook) %>" aria-current="page"><h5><%= octicon "note" %> Timeline <span class="Counter">1</span></h5></a>
    <a class="tabnav-tab" href="<%= agenda_path(notebook: @current_notebook) %>"><%= octicon "watch" %> This Day <span class="Counter">2</span></a>
    <a class="tabnav-tab" href="<%= calendar_weekly_path(notebook: @current_notebook) %>"><%= octicon "list-unordered" %> This Week <span class="Counter">3</span></a>
    <a class="tabnav-tab" href="<%= calendar_path(notebook: @current_notebook) %>"><%= octicon "calendar" %> This Month <span class="Counter">4</span></a>
  </nav>
</div>
<% end %>
<div class="">
  <%= form_with url: search_path(notebook: @current_notebook), local: true, method: :get, html: { name: "searchform" } do |form| %>
    <div class="form-actions">
      <div class="col-10 float-left pr-3">
        <%= form.text_field :search_query, class: "form-control input-block", value: @search_query, name: "query", placeholder: "Type and hit enter to search. Ctrl+L to focus." %>
      </div>

      <div class="col-2 float-left">
        <%= form.submit "Search", class: "btn" %>
        <!-- <a href="<%= new_entry_path(notebook: @current_notebook) %>" class="btn"><%= octicon "pencil" %> New Entry</a> -->
      </div>
    </div>
  <% end %>
</div>

<div class="sidebar-container">
  <div class="mb-3">
    <h1 class="arquivo"><a href="<%= timeline_path(notebook: @current_notebook) %>">Arquivo</a></u></h1>
    <details>
      <summary><h2 class="" style="display: inline; color:<%= @current_notebook.colour %>"><%= octicon "book", height: 24 %> <%= @current_notebook.name %> </h2></summary>
      <ul style="list-style: none">
        <% Notebook.all.each do |notebook| %>
          <% next if notebook == @current_notebook %>
          <li><h3 class="ml-1"><a href="<%= timeline_path(notebook: notebook) %>" type="button" role="menuitem" data-menu-button-text style="color: <%=notebook.colour%> !important"><%= octicon "book", height: 16 %> <%= notebook.name %></a></h3></li>
        <% end %>
      </ul>
    </details>
  </div>


  <div class="Box border-0">
    <div class="Box-row pl-0 mr-5">
      <h4 ><a href="<%= timeline_path(notebook: @current_notebook) %>"><%= octicon "zap" %> <span class="<%= current_sidebar?(:timeline) %>">Timeline</span></a></h4>
    </div>
    <div class="Box-row pl-0 mr-5">

      <h4><a href="<%= calendar_daily_path(notebook: @current_notebook) %>"><%= octicon "watch" %> <span class="<%= current_sidebar?(:this_day) %>">This Day</span></a></h4>
    </div>
    <div class="Box-row pl-0 mr-5">
      <h4><a href="<%= calendar_weekly_path(notebook: @current_notebook) %>"><%= octicon "list-unordered" %> <span class="<%= current_sidebar?(:this_week) %>">This Week</span></a></h4>
    </div>
    <div class="Box-row pl-0 mr-5">
      <h4><a href="<%= calendar_path(notebook: @current_notebook) %>"><%= octicon "calendar" %> <span class="<%= current_sidebar?(:this_month) %>">This Month</span></a></h4>
    </div>
    <div class="Box-row pl-0 mr-5">
      <h4><a href="<%= settings_path(notebook: @current_notebook) %>"><%= octicon "gear" %> <span class="<%= current_sidebar?(:settings) %>">Settings</span></a></h4>
    </div>
  </div>

  <% if Tag.where(notebook: @current_notebook.name).any? %>
    <div class="mt-3">
      <h4>Recent Tags</h4>
      <ul class="list-style-none">
        <% Tag.where(notebook: @current_notebook.name).order(updated_at: :desc).limit(30).each do |topic| %>
          <li class="pb-2">
            <a href="<%= search_path(query: topic, notebook: @current_notebook)%>">
              <%=topic%><br>
              <span class="muted-link"><%= time_ago_in_words(topic.updated_at, include_seconds: true) %> ago</span>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<% # for now, the header-container has to line up perfectly with the content-container content
   # and therefore, it's easier to just insert an empty sidebar-container so all
  # the padding & margins line up just-right.
  # TODO: uh fix this! %>
<div class="sidebar-container">
  &nbsp;
</div>
<div class="static_pls nav-header-container">

  <% if title_entry = @current_notebook.entries.find_by(identifier: "_title") %>
    <div class="title">
      <a href="<%= timeline_path(@current_notebook) %>" class="text-gray-dark"><%= EntryRenderer.new(title_entry).to_html("body", skip_toc: true) %></a>
    </div>
    <% if subtitle_entry = @current_notebook.entries.find_by(identifier: "_subtitle") %>
      <div class="subtitle markdown-body mb-1">
        <%= EntryRenderer.new(subtitle_entry).to_html("body", skip_toc: true) %>
      </div>
    <% end %>
  <% else %>
  <% end %>
  <div class="nav-header" style="display:flex; align-items: baseline">
    <% if title_entry.nil? %>
      <h1 class="arquivo mr-4" style="display: flex;"><a href="<%= timeline_path(@current_notebook) %>">Arquivo</a></u></h1>
    <% end %>

    <ul style="list-style: none; display: flex;">
      <li>
        <h4>
          <span class="<%= current_sidebar?(:timeline) %>"><%= octicon "zap" %> <a href="<%= timeline_path(@current_notebook) %>" class="<%= current_sidebar?(:timeline) %>">Timeline</a></span>
        </h4>
      </li>
      <% if false #useless in static mode? / why browse day by day? %>
      <li>
        <h4>
          <span class="<%= current_sidebar?(:this_day) %>"> <a href="<%= calendar_daily_path(nil, @current_notebook) %>">This Day</a></span>
        </h4>
      </li>
    <% end %>
      <li>
        <h4>
          <span class="<%= current_sidebar?(:tags) %>"><%= octicon "tag"%> <a href="<%= tags_path %>" class="<%= current_sidebar?(:tags) %>">Tags</a></span>
        </h4>
      </li>
      <li>
        <h4>
          <span class="<%= current_sidebar?(:contacts) %>"><%= octicon "mention"%> <a href="<%= contacts_path %>" class="<%= current_sidebar?(:contacts) %>">Mentions</a></span>
        </h4>
      </li>
      <% if about_page = @current_notebook.entries.find_by(identifier: "about") || @current_notebook.entries.find_by(identifier: "about.html") %>
        <li>
          <h4>
            <span class="<%= current_sidebar?(:about) %>"><%= octicon "ellipsis"%> <a href="<%= entry_path(about_page) %>" class="<%= current_sidebar?(:about) %>">About</a></span>
          </h4>
        </li>
      <% end %>

       <li>
        <h4>
          <span class="text-blue"><%= octicon "rss"%> <a href="<%= timeline_feed_path %>">Feed</a></span>
        </h4>
      </li>
    </ul>
  </div>
</div>
